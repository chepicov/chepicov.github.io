.commit-list {
  display: flex;
  flex-direction: column;
  align-items: center;

  &__name {
    font-family: Arial;
    width: 100%;
    text-align: center;
    background: #ccc;
    padding: 10px;
    margin-bottom: 0;
  }

  &__link {
    text-decoration: none;
    color: black;
    &:hover {
      text-decoration: none;
      color: black;
    }
  }

  &__body {
    display: flex;
    flex-direction: column;
    border-radius: 3px;
    list-style-type: none;
    max-width: 1250px;

    .commit {
      display: flex;
      justify-content: space-between;
      font-size: 14px;
      align-items: center;
      border-bottom: 1px solid #ccc;

      &--blue {
        background: blue;
      }
      &__number {
        padding-right: 10px;
        width: 5%;
      }
      &__sha {
        width: 55%;
      }
      &__message {
        max-width: 300px;
        word-wrap: break-word;
        width: 50%;
      }
      &__photo {
        width: 50px;
        height: 50px;
      }
      &__link {
        width: 15%;
      }
    }
  }
}
